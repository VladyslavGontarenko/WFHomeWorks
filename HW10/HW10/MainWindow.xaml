<Window x:Class="HW10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Material Design Example" Height="350" Width="525">
    <Grid>
        <materialDesign:Card Width="300" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="16">
                <TextBox materialDesign:HintAssist.Hint="Username" Margin="0 0 0 16"/>
                <PasswordBox materialDesign:HintAssist.Hint="Password" Margin="0 0 0 16"/>
                <Button Content="Login" HorizontalAlignment="Right" Width="100"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>